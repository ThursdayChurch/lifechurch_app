<%= simple_form_for @ministry, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@ministry[:name]) %>
  <%= f.input :contact_person %>
  <%= error_span(@ministry[:contact_person]) %>
  <%= f.input :contact_email %>
  <%= error_span(@ministry[:contact_email]) %>
  <%= f.input :description %>
  <%= error_span(@ministry[:description]) %>
  <%= f.input :display_rank %>
  <%= error_span(@ministry[:display_rank]) %>
  <%= f.input :ta1 %>
  <%= error_span(@ministry[:ta1]) %>
  <%= f.input :ta2 %>
  <%= error_span(@ministry[:ta2]) %>
  <%= f.input :ta3 %>
  <%= error_span(@ministry[:ta3]) %>
  <%= f.input :ta4 %>
  <%= error_span(@ministry[:ta4]) %>
  <%= f.input :ta5 %>
  <%= error_span(@ministry[:ta5]) %>
  <%= f.input :advert_main_page %>
  <%= error_span(@ministry[:advert_main_page]) %>
  <%= f.input :slug %>
  <%= error_span(@ministry[:slug]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ministries_path, :class => 'btn btn-default' %>
<% end %>
