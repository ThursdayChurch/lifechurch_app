<%= simple_form_for @events_picture, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@events_picture[:title]) %>
  <%= f.input :event_image %>
  <%= error_span(@events_picture[:event_image]) %>
  <%= f.input :linked_event %>
  <%= error_span(@events_picture[:linked_event]) %>
  <%= f.input :description %>
  <%= error_span(@events_picture[:description]) %>
  <%= f.input :event_id %>
  <%= error_span(@events_picture[:event_id]) %>
  <%= f.input :eventimage %>
  <%= error_span(@events_picture[:eventimage]) %>
  <%= f.input :image_processed %>
  <%= error_span(@events_picture[:image_processed]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_pictures_path, :class => 'btn btn-default' %>
<% end %>
