<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email_1 %>
    <%= f.input :email_2 %>
    <%= f.input :send_email_2 %>
    <%= f.input :open_site %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
