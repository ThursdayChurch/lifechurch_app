<%- model_class = ChurchStaffsPicture -%>
<%- model_class = ChurchStaffPicture -%>
<div class="page-header">
  <h1>Manage Staff Picture</h1>
</div>
 
<%= link_to t('.step_1', :default => t("helpers.links.Upload Picture & Setup New Staff Image")),
              churchs_staff_pictures_step_1_path ,
              :class => 'btn btn-primary  pull-left' %>

			<%= link_to t('.new', :default => t("helpers.links.Return to Staff List")),
			            church_staffs_path,
			            :class => 'btn btn-primary  pull-right' %>
		 
						
						
<table class="table table-striped">
  <thead>
    <tr>
     
      <th>Name</th>
     
      <th>Picture</th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @church_staff_pictures.each do |church_staff_picture| %>
      <tr>
         


        <td> 
	
	 		  <% if church_staff_picture.church_staff != nil %>
	
			    <%= church_staff_picture.church_staff.full_name %>

			  <% else %>
			    <em>Not setup to Staff</em>
			  <% end %>
 
	
	</td>
         
         <td>
          <% if church_staff_picture.image_processed? %>
		    <%= image_tag(church_staff_picture.staff_image_url(:stamp), :class =>"img-rounded" ) %>

		  <% else %>
		    <em>Processing...</em>
		  <% end %>
         </td>
 
        <td>
 
			 
			          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                      church_staffs_picture_path(church_staffs_picture),
			                      :method => :delete,
			                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                      :class => 'btn btn-xs btn-danger' %>
					  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

 

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:church_staff_id) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:staff_image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @church_staffs_pictures.each do |church_staffs_picture| %>
      <tr>
        <td><%= link_to church_staffs_picture.id, church_staffs_picture_path(church_staffs_picture) %></td>
        <td><%= church_staffs_picture.first_name %></td>
        <td><%= church_staffs_picture.last_name %></td>
        <td><%= church_staffs_picture.image %></td>
        <td><%= church_staffs_picture.church_staff_id %></td>
        <td><%= church_staffs_picture.image_processed %></td>
        <td><%= church_staffs_picture.staff_image %></td>
        <td><%=l church_staffs_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_church_staffs_picture_path(church_staffs_picture), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      church_staffs_picture_path(church_staffs_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_church_staffs_picture_path,
            :class => 'btn btn-primary' %>
