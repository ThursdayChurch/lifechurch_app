<%= simple_form_for @schedule, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@schedule[:name]) %>
  <%= f.input :description %>
  <%= error_span(@schedule[:description]) %>
  <%= f.input :end_month %>
  <%= error_span(@schedule[:end_month]) %>
  <%= f.input :start_month %>
  <%= error_span(@schedule[:start_month]) %>
  <%= f.input :schedule_image %>
  <%= error_span(@schedule[:schedule_image]) %>
  <%= f.input :image_processed %>
  <%= error_span(@schedule[:image_processed]) %>
  <%= f.input :url %>
  <%= error_span(@schedule[:url]) %>
  <%= f.input :slug %>
  <%= error_span(@schedule[:slug]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schedules_path, :class => 'btn btn-default' %>
<% end %>
