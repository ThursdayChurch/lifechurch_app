<%= simple_form_for @summary, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :what_we_believe %>
  <%= error_span(@summary[:what_we_believe]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                summaries_path, :class => 'btn btn-default' %>
<% end %>
