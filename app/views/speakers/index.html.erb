<h1>Listing speakers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>From church</th>
      <th>Description</th>
      <th>Church staff</th>
      <th>From church url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.title %></td>
        <td><%= speaker.first_name %></td>
        <td><%= speaker.last_name %></td>
        <td><%= speaker.from_church %></td>
        <td><%= speaker.description %></td>
        <td><%= speaker.church_staff_id %></td>
        <td><%= speaker.from_church_url %></td>
        <td><%= link_to 'Show', speaker %></td>
        <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
        <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

