<%= simple_form_for @speaker, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@speaker[:title]) %>
  <%= f.input :first_name %>
  <%= error_span(@speaker[:first_name]) %>
  <%= f.input :last_name %>
  <%= error_span(@speaker[:last_name]) %>
  <%= f.input :from_church %>
  <%= error_span(@speaker[:from_church]) %>
  <%= f.input :description %>
  <%= error_span(@speaker[:description]) %>
  <%= f.input :church_staff_id %>
  <%= error_span(@speaker[:church_staff_id]) %>
  <%= f.input :from_church_url %>
  <%= error_span(@speaker[:from_church_url]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                speakers_path, :class => 'btn btn-default' %>
<% end %>
