<h1>Listing sermons</h1>

<table>
  <thead>
    <tr>
      <th>Date of sermon</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Audio url</th>
      <th>Video url</th>
      <th>Display until</th>
      <th>Speaker</th>
      <th>Members only</th>
      <th>Url</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sermons.each do |sermon| %>
      <tr>
        <td><%= sermon.date_of_sermon %></td>
        <td><%= sermon.title %></td>
        <td><%= sermon.description %></td>
        <td><%= sermon.category %></td>
        <td><%= sermon.audio_url %></td>
        <td><%= sermon.video_url %></td>
        <td><%= sermon.display_until %></td>
        <td><%= sermon.speaker_id %></td>
        <td><%= sermon.members_only %></td>
        <td><%= sermon.url %></td>
        <td><%= sermon.slug %></td>
        <td><%= link_to 'Show', sermon %></td>
        <td><%= link_to 'Edit', edit_sermon_path(sermon) %></td>
        <td><%= link_to 'Destroy', sermon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

