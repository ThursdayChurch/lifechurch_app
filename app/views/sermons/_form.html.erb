<%= simple_form_for(@sermon) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_of_sermon %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :audio_url %>
    <%= f.input :video_url %>
    <%= f.input :display_until %>
    <%= f.input :speaker_id %>
    <%= f.input :members_only %>
    <%= f.input :url %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
