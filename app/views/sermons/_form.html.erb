<%= simple_form_for @sermon, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date_of_sermon %>
  <%= error_span(@sermon[:date_of_sermon]) %>
  <%= f.input :title %>
  <%= error_span(@sermon[:title]) %>
  <%= f.input :description %>
  <%= error_span(@sermon[:description]) %>
  <%= f.input :category %>
  <%= error_span(@sermon[:category]) %>
  <%= f.input :audio_url %>
  <%= error_span(@sermon[:audio_url]) %>
  <%= f.input :video_url %>
  <%= error_span(@sermon[:video_url]) %>
  <%= f.input :display_until %>
  <%= error_span(@sermon[:display_until]) %>
  <%= f.input :speaker_id %>
  <%= error_span(@sermon[:speaker_id]) %>
  <%= f.input :members_only %>
  <%= error_span(@sermon[:members_only]) %>
  <%= f.input :url %>
  <%= error_span(@sermon[:url]) %>
  <%= f.input :slug %>
  <%= error_span(@sermon[:slug]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sermons_path, :class => 'btn btn-default' %>
<% end %>
