<h1>Listing life_pulses</h1>

<table>
  <thead>
    <tr>
      <th>Keywords</th>
      <th>From pastor desk</th>
      <th>Template selected</th>
      <th>Content</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Flickr</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_pulses.each do |life_pulse| %>
      <tr>
        <td><%= life_pulse.keywords %></td>
        <td><%= life_pulse.from_pastor_desk %></td>
        <td><%= life_pulse.template_selected %></td>
        <td><%= life_pulse.content %></td>
        <td><%= life_pulse.title %></td>
        <td><%= life_pulse.summary %></td>
        <td><%= life_pulse.flickr_id %></td>
        <td><%= life_pulse.slug %></td>
        <td><%= link_to 'Show', life_pulse %></td>
        <td><%= link_to 'Edit', edit_life_pulse_path(life_pulse) %></td>
        <td><%= link_to 'Destroy', life_pulse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

