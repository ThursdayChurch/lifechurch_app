<%- model_class = SermonsPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sermon_image) %>:</strong></dt>
  <dd><%= @sermons_picture.sermon_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_processed) %>:</strong></dt>
  <dd><%= @sermons_picture.image_processed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sermons_id) %>:</strong></dt>
  <dd><%= @sermons_picture.sermons_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sermons_pictures_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sermons_picture_path(@sermons_picture), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sermons_picture_path(@sermons_picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
