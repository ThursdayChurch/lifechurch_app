<%= simple_form_for @ministries_picture, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :ministry_image %>
  <%= error_span(@ministries_picture[:ministry_image]) %>
  <%= f.input :image_processed %>
  <%= error_span(@ministries_picture[:image_processed]) %>
  <%= f.input :ministries_id %>
  <%= error_span(@ministries_picture[:ministries_id]) %>
  <%= f.input :ministry_id %>
  <%= error_span(@ministries_picture[:ministry_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ministries_pictures_path, :class => 'btn btn-default' %>
<% end %>
