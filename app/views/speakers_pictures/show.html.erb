<%- model_class = SpeakersPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:speaker_image) %>:</strong></dt>
  <dd><%= @speakers_picture.speaker_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:speaker_id) %>:</strong></dt>
  <dd><%= @speakers_picture.speaker_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_processed) %>:</strong></dt>
  <dd><%= @speakers_picture.image_processed %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              speakers_pictures_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_speakers_picture_path(@speakers_picture), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              speakers_picture_path(@speakers_picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
