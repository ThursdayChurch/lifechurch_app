<%- model_class = SpeakersPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:speaker_image) %></th>
      <th><%= model_class.human_attribute_name(:speaker_id) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @speakers_pictures.each do |speakers_picture| %>
      <tr>
        <td><%= link_to speakers_picture.id, speakers_picture_path(speakers_picture) %></td>
        <td><%= speakers_picture.speaker_image %></td>
        <td><%= speakers_picture.speaker_id %></td>
        <td><%= speakers_picture.image_processed %></td>
        <td><%=l speakers_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_speakers_picture_path(speakers_picture), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      speakers_picture_path(speakers_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_speakers_picture_path,
            :class => 'btn btn-primary' %>
