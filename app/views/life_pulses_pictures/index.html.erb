<%- model_class = LifePulsesPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:life_pulse_id) %></th>
      <th><%= model_class.human_attribute_name(:life_pulse_image) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:main_page) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @life_pulses_pictures.each do |life_pulses_picture| %>
      <tr>
        <td><%= link_to life_pulses_picture.id, life_pulses_picture_path(life_pulses_picture) %></td>
        <td><%= life_pulses_picture.life_pulse_id %></td>
        <td><%= life_pulses_picture.life_pulse_image %></td>
        <td><%= life_pulses_picture.title %></td>
        <td><%= life_pulses_picture.summary %></td>
        <td><%= life_pulses_picture.image_processed %></td>
        <td><%= life_pulses_picture.main_page %></td>
        <td><%=l life_pulses_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_life_pulses_picture_path(life_pulses_picture), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      life_pulses_picture_path(life_pulses_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_life_pulses_picture_path,
            :class => 'btn btn-primary' %>
