<%= simple_form_for @life_pulses_picture, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :life_pulse_id %>
  <%= error_span(@life_pulses_picture[:life_pulse_id]) %>
  <%= f.input :life_pulse_image %>
  <%= error_span(@life_pulses_picture[:life_pulse_image]) %>
  <%= f.input :title %>
  <%= error_span(@life_pulses_picture[:title]) %>
  <%= f.input :summary %>
  <%= error_span(@life_pulses_picture[:summary]) %>
  <%= f.input :image_processed %>
  <%= error_span(@life_pulses_picture[:image_processed]) %>
  <%= f.input :main_page %>
  <%= error_span(@life_pulses_picture[:main_page]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                life_pulses_pictures_path, :class => 'btn btn-default' %>
<% end %>
