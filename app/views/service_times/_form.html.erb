<%= simple_form_for @service_time, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :day %>
  <%= error_span(@service_time[:day]) %>
  <%= f.input :start_time %>
  <%= error_span(@service_time[:start_time]) %>
  <%= f.input :end_time %>
  <%= error_span(@service_time[:end_time]) %>
  <%= f.input :service_name %>
  <%= error_span(@service_time[:service_name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                service_times_path, :class => 'btn btn-default' %>
<% end %>
