<%= simple_form_for(@service_time) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :day %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :service_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
