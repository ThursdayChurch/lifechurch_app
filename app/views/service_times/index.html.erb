<h1>Listing service_times</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Service name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_times.each do |service_time| %>
      <tr>
        <td><%= service_time.day %></td>
        <td><%= service_time.start_time %></td>
        <td><%= service_time.end_time %></td>
        <td><%= service_time.service_name %></td>
        <td><%= link_to 'Show', service_time %></td>
        <td><%= link_to 'Edit', edit_service_time_path(service_time) %></td>
        <td><%= link_to 'Destroy', service_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service time', new_service_time_path %>
