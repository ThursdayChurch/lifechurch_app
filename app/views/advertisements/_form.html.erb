<%= simple_form_for @advertisement, :html => { :class => 'form-horizontal' } do |f| %>
 
  <%= f.input :advertisement_name %>
  <%= error_span(@advertisement[:advertisement_name]) %>
  <%= f.input :advertisement_date %>
  <%= error_span(@advertisement[:advertisement_date]) %>
  <%= f.input :advertisement_time %>
  <%= error_span(@advertisement[:advertisement_time]) %>
  
  <%= f.input :remove_advertisement_date %>
  <%= error_span(@advertisement[:remove_advertisement_date]) %>
  <%= f.input :display_main_page %>
  <%= error_span(@advertisement[:display_main_page]) %>
  <%= f.input :advertisement_start_time %>
  <%= error_span(@advertisement[:advertisement_start_time]) %>  
  <%= f.input :internal_link_url %>
  <%= error_span(@advertisement[:internal_link_url]) %>  
  <%= f.input :force_on_main_page %>
  <%= error_span(@advertisement[:force_on_main_page]) %> 
  <%= f.input :scheduled_when %>
  <%= error_span(@advertisement[:scheduled_when]) %> 
  <%= f.input :create_own_page %>
  <%= error_span(@advertisement[:create_own_page]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                advertisements_path, :class => 'btn btn-default' %>
<% end %>
