<%- model_class = SiteSetup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:youtube) %>:</strong></dt>
  <dd><%= @site_setup.youtube %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
  <dd><%= @site_setup.facebook %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video_stream) %>:</strong></dt>
  <dd><%= @site_setup.video_stream %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @site_setup.twitter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:life_pulse) %>:</strong></dt>
  <dd><%= @site_setup.life_pulse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leaders_blog) %>:</strong></dt>
  <dd><%= @site_setup.leaders_blog %></dd>
  <dt><strong><%= model_class.human_attribute_name(:store) %>:</strong></dt>
  <dd><%= @site_setup.store %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video) %>:</strong></dt>
  <dd><%= @site_setup.video %></dd>
  <dt><strong><%= model_class.human_attribute_name(:articles) %>:</strong></dt>
  <dd><%= @site_setup.articles %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shutdown) %>:</strong></dt>
  <dd><%= @site_setup.shutdown %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              site_setups_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_setup_path(@site_setup), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_setup_path(@site_setup),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
