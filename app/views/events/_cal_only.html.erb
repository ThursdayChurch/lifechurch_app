
<%= f.input :event_name, :label=>"Name of Calendar Event:", :placeholder=>' aka - "UpRoar 2014"', :input_html => { :class => "enroll_input col-md-4"}   %>
<%= f.input :summary, :label=>"Summary:", :placeholder=>' aka - "UpRoar 2014"', :input_html => { :class => "enroll_input col-md-4"}   %>


 <%= f.input :recurring_on, :label=>"Does this Event recurring every week?:"  %>
 

 <%= f.input :recurring_day,  :label=>'What Day ?', :collection=>[ ['Monday' ], ['Tuesday' ], ['Wednesday' ], ['Thursday'], ['Friday'], ['Saturday'], ['Sunday'] ], :selected=>['Sunday' ] %>


 <%= f.input :event_date, as: :date, :label=>"Event Start Date:",  :hint => "Select the first day of the Event - If a recurring date - just pick todays date",  start_year: Date.today.year, 
     end_year: Date.today.year + 2, order: [ :month,:day, :year], :include_blank => false, :input_html => { :class => "enroll_input span2"},:prompt=> "Please Select"   %>
 

  