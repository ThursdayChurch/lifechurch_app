<div class="col-md-offset-1 col-md-9">
<br>

<%= simple_form_for @calendar, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :calendar_name, :label=>"Name of Calendar Event:", :placeholder=>' aka - "UpRoar 2014"', :input_html => { :class => "enroll_input col-md-4"}   %>
  <%= error_span(@calendar[:calendar_name]) %>
 
  
  
  
  <%= f.input :calendar_date, as: :date, :label=>"Event Start Date:",  :hint => "Select the first day of the Event - If a recurring date - just pick todays date",  start_year: Date.today.year, 
      end_year: Date.today.year + 2, order: [ :month,:day, :year], :include_blank => false, :input_html => { :class => "enroll_input span2"},:prompt=> "Please Select"   %>
  <%= error_span(@calendar[:calendar_date]) %>
  
  
  <%= f.input :recurring_day,  :label=>'What Day ?', :collection=>[ ['Monday' ], ['Tuesday' ], ['Wednesday' ], ['Thursday'], ['Friday'], ['Saturday'], ['Sunday'] ], :selected=>['Sunday' ] %>
  <%= error_span(@calendar[:recurring_day]) %>
  <%= f.input :recurring_on, :label=>"Does this Event recurring every week?:"  %>
  <%= error_span(@calendar[:recurring_on]) %>
  
  
  
  
  
 
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                calendars_path, :class => 'btn btn-default' %>
<% end %>

<br>
</div>