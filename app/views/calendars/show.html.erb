<%- model_class = Calendar -%>
 <% provide(:title, @calendar.calendar_name ) %>
<br>
				<table width="100%" class="table_zero"> 
				 <td style="width:5px; padding: 0 50px; white-space: nowrap;"><span class="main_text"><%= @calendar.calendar_name %></span> </td>
				  <td><hr class="round_line_hoz" /></td>
				</table>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:calendar_name) %>:</strong></dt>
  <dd><%= @calendar.calendar_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:calendar_date) %>:</strong></dt>
  <dd><%= @calendar.calendar_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recurring_day) %>:</strong></dt>
  <dd><%= @calendar.recurring_day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recurring_on) %>:</strong></dt>
  <dd><%= @calendar.recurring_on %></dd>
</dl>

<div class="pull-center" >
<%= link_to t('.back', :default => t("helpers.links.back")),
              calendars_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_calendar_path(@calendar), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              calendar_path(@calendar),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>