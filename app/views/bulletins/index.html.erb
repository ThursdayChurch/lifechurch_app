<%- model_class = Bulletin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:display_till) %></th>
      <th><%= model_class.human_attribute_name(:display_start) %></th>
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th>
      <th><%= model_class.human_attribute_name(:bulletin_image) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:members_only) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:slug) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bulletins.each do |bulletin| %>
      <tr>
        <td><%= link_to bulletin.id, bulletin_path(bulletin) %></td>
        <td><%= bulletin.name %></td>
        <td><%= bulletin.description %></td>
        <td><%= bulletin.display_till %></td>
        <td><%= bulletin.display_start %></td>
        <td><%= bulletin.advert_main_page %></td>
        <td><%= bulletin.bulletin_image %></td>
        <td><%= bulletin.url %></td>
        <td><%= bulletin.members_only %></td>
        <td><%= bulletin.image_processed %></td>
        <td><%= bulletin.slug %></td>
        <td><%=l bulletin.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bulletin_path(bulletin), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bulletin_path(bulletin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bulletin_path,
            :class => 'btn btn-primary' %>
