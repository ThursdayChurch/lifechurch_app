<%= simple_form_for @bulletin, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@bulletin[:name]) %>
  <%= f.input :description %>
  <%= error_span(@bulletin[:description]) %>
  <%= f.input :display_till %>
  <%= error_span(@bulletin[:display_till]) %>
  <%= f.input :display_start %>
  <%= error_span(@bulletin[:display_start]) %>
  <%= f.input :advert_main_page %>
  <%= error_span(@bulletin[:advert_main_page]) %>
  <%= f.input :bulletin_image %>
  <%= error_span(@bulletin[:bulletin_image]) %>
  <%= f.input :url %>
  <%= error_span(@bulletin[:url]) %>
  <%= f.input :members_only %>
  <%= error_span(@bulletin[:members_only]) %>
  <%= f.input :image_processed %>
  <%= error_span(@bulletin[:image_processed]) %>
  <%= f.input :slug %>
  <%= error_span(@bulletin[:slug]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bulletins_path, :class => 'btn btn-default' %>
<% end %>
