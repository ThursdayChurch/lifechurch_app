<h1>Listing ministry_children</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact person</th>
      <th>Contact email</th>
      <th>Description</th>
      <th>Display rank</th>
      <th>Ta1</th>
      <th>Ta2</th>
      <th>Ta3</th>
      <th>Ta4</th>
      <th>Ta5</th>
      <th>Advert main page</th>
      <th>Ministry</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ministry_children.each do |ministry_child| %>
      <tr>
        <td><%= ministry_child.name %></td>
        <td><%= ministry_child.contact_person %></td>
        <td><%= ministry_child.contact_email %></td>
        <td><%= ministry_child.description %></td>
        <td><%= ministry_child.display_rank %></td>
        <td><%= ministry_child.ta1 %></td>
        <td><%= ministry_child.ta2 %></td>
        <td><%= ministry_child.ta3 %></td>
        <td><%= ministry_child.ta4 %></td>
        <td><%= ministry_child.ta5 %></td>
        <td><%= ministry_child.advert_main_page %></td>
        <td><%= ministry_child.ministry_id %></td>
        <td><%= ministry_child.slug %></td>
        <td><%= link_to 'Show', ministry_child %></td>
        <td><%= link_to 'Edit', edit_ministry_child_path(ministry_child) %></td>
        <td><%= link_to 'Destroy', ministry_child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

