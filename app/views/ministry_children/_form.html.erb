<%= simple_form_for @ministry_child, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@ministry_child[:name]) %>
  <%= f.input :contact_person %>
  <%= error_span(@ministry_child[:contact_person]) %>
  <%= f.input :contact_email %>
  <%= error_span(@ministry_child[:contact_email]) %>
  <%= f.input :description %>
  <%= error_span(@ministry_child[:description]) %>
  <%= f.input :display_rank %>
  <%= error_span(@ministry_child[:display_rank]) %>
  <%= f.input :ta1 %>
  <%= error_span(@ministry_child[:ta1]) %>
  <%= f.input :ta2 %>
  <%= error_span(@ministry_child[:ta2]) %>
  <%= f.input :ta3 %>
  <%= error_span(@ministry_child[:ta3]) %>
  <%= f.input :ta4 %>
  <%= error_span(@ministry_child[:ta4]) %>
  <%= f.input :ta5 %>
  <%= error_span(@ministry_child[:ta5]) %>
  <%= f.input :advert_main_page %>
  <%= error_span(@ministry_child[:advert_main_page]) %>
  <%= f.input :ministry_id %>
  <%= error_span(@ministry_child[:ministry_id]) %>
  <%= f.input :slug %>
  <%= error_span(@ministry_child[:slug]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
